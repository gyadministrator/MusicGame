<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/answer_text"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:background="@drawable/answer"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="2121212"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ok_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/msg"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="122121"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <Button
            android:id="@+id/next"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_below="@+id/ok_answer"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:background="#51bdcf"
            android:padding="15dp"
            android:text="@string/next"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/answer_rel"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:background="@drawable/answer"
        android:gravity="center">

        <EditText
            android:id="@+id/answer_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:hint="@string/answer" />

        <Button
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/answer_edit"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey"
            android:enabled="false"
            android:text="@string/ok"
            android:textColor="#FFFFFF" />
    </RelativeLayout>
</RelativeLayout>