<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="6dp"
    android:orientation="horizontal">

    <view.CircleImageView
        android:id="@+id/back_music_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:background="@mipmap/music_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/back_music_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题" />

        <TextView
            android:id="@+id/back_music_singer"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌手" />
    </LinearLayout>

    <TextView
        android:id="@+id/back_music_play"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginRight="15dp"
        android:background="@mipmap/music_stop" />

    <TextView
        android:id="@+id/back_music_next"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@mipmap/music_next" />

    <TextView
        android:id="@+id/back_music_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/cha" />
</LinearLayout>